{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build JUCE Project (Debug)",
            "type": "shell",
            "command": "make",
            "args": [
                "CONFIG=Debug",
                "-j4"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Builds/LinuxMakefile"
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build JUCE Project (Release)",
            "type": "shell",
            "command": "make",
            "args": [
                "CONFIG=Release",
                "-j4"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Builds/LinuxMakefile"
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean JUCE Project",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Builds/LinuxMakefile"
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build JUCE Project (macOS Debug)",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-project",
                "NewProject.xcodeproj",
                "-configuration",
                "Debug",
                "build"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Builds/MacOSX"
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build JUCE Project (macOS Release)",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-project",
                "NewProject.xcodeproj",
                "-configuration",
                "Release",
                "build"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Builds/MacOSX"
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean JUCE Project (macOS)",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-project",
                "NewProject.xcodeproj",
                "clean"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Builds/MacOSX"
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}