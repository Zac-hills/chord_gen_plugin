{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug JUCE Application",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/LinuxMakefile/build/NewProject",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "DISPLAY",
                    "value": "${env:DISPLAY}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build JUCE Project (Debug)",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": false,
                "programOutput": true,
                "trace": false
            },
            "visualizerFile": "",
            "showDisplayString": true
        },
        {
            "name": "Run JUCE Application (Release)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/LinuxMakefile/build/NewProject",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "DISPLAY",
                    "value": "${env:DISPLAY}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build JUCE Project (Release)",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": false,
                "programOutput": true,
                "trace": false
            }
        },
        {
            "name": "Attach to JUCE Process",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/Builds/LinuxMakefile/build/NewProject",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}